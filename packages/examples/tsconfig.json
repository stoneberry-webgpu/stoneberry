{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["@webgpu/types"],
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "esModuleInterop": false,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "remove",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "stoneberry/scan": ["../stoneberry/src/scan"],
      "stoneberry/reduce-buffer": ["../stoneberry/src/reduce-buffer"],
      "stoneberry/reduce-texture": ["../stoneberry/src/reduce-texture"],
      "stoneberry-examples": ["./src/exampleUtils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
