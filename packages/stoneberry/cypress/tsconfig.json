{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["cypress", "@webgpu/types"],
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.AsyncIterable"],
    "esModuleInterop": false,
    "downlevelIteration": true,
    "importsNotUsedAsValues": "remove",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "stoneberry/scan": ["../src/scan"],
      "stoneberry/util": ["../src/util"],
      "stoneberry/reduce-buffer": ["../src/reduce-buffer"],
      "stoneberry/reduce-texture": ["../src/reduce-texture"],
      "stoneberry/histogram-texture": ["../src/histogram-texture"]
    }
  },
  "include": ["**/*.ts"]
}
