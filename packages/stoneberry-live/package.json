{
  "name": "stoneberry-live",
  "version": "0.2.1",
  "scripts": {
    "dev": "vite",
    "prepublish": "rimraf dist && pnpm run build && pnpm run build:types",
    "build": "vite build",
    "build:types": "tsc --project tsconfig.build.json"
  },
  "type": "module",
  "module": "dist/StoneberryLive.js",
  "main": "dist/StoneberryLive.js",
  "types": "dist/StoneberryLive.d.ts",
  "export": {
    ".": {
      "import": "dist/StoneberryLive.js",
      "require": "dist/StoneberryLive.js",
      "types": "dist/StoneberryLive.d.ts"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "resolve": "./dist/style.css",
      "default": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@monaco-editor/react": "^4.5.1",
    "@webgpu/types": "^0.1.34",
    "live-typescript": "^0.2.7",
    "stoneberry": "workspace:^",
    "stoneberry-examples": "workspace:*",
    "sucrase": "^3.34.0",
    "thimbleberry": "^0.1.15"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^5.0.1",
    "rollup-plugin-sourcefiles": "^0.2.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-externalize-deps": "^0.7.0"
  },
  "repository": "github:mighdoll/live-typescript",
  "license": "ISC"
}
